@model RegisterVM
<div>
    <div>
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 form-group">
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="Surname" class="form-control" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="UserName" class="form-control" placeholder="UserName">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="EmailAdress" class="form-control" placeholder="EmailAdress">
                    <span asp-validation-for="EmailAdress"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="ConfrimPassword" class="form-control" placeholder="ConfrimPassword">
                    <span asp-validation-for="ConfrimPassword"></span>
                </div>
                <div>
                    <button class="btn btn-success" type="submit">Register</button>
                </div>
            </div>
        </form>
    </div>

</div>