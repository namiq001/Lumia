@model List<Worker>
@{
    int count = 0;
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="white-box">
            <div class="d-md-flex mb-3">
                <h3 class="box-title mb-0">Recent sales</h3>
                <a asp-action="Create"><div class="btn btn-success"> Create</div> </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table no-wrap">
                    <thead>
                        <tr>
                            <th class="border-top-0">№</th>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0">Description</th>
                            <th class="border-top-0">Work Type</th>
                            <th class="border-top-0">Image</th>
                            <th class="border-top-0">Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Worker item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td class="txt-oflo">@item.Name</td>
                                <td>@item.Description</td>
                                <td class="txt-oflo">@item.WorkType.WorkTypeName</td>
                                <td><img style="width:200px" src="~/assets/img/testimonials/@item.ProfileImage" class="testimonial-img" alt=""></td>
                                <td>
                                    <button class="btn btn-info">Detalies</button>
                                    <form asp-action="Edit" asp-route-id="@item.Id" method="get" >
                                        <button class="btn btn-primary">Edit</button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>